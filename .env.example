# Prism AI environment template
# Copy this file to .env and .env.local as needed.

# Backend configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
# Use gpt-4o-mini only if you don't require vision uploads
OPENAI_SYSTEM_PROMPT=
# Limit the maximum number of tokens returned by OpenAI responses
OPENAI_MAX_OUTPUT_TOKENS=1500
# Primary LLM provider (fallbacks to OpenAI if unavailable)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=meta-llama/llama-4-scout:free
# Optional: helps OpenRouter rankings/analytics
OPENROUTER_SITE_URL=
OPENROUTER_SITE_NAME=
# Timeout in milliseconds for OpenRouter requests (set to 0 to disable)
OPENROUTER_TIMEOUT_MS=15000
# Optional: override the OpenRouter endpoint
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1/chat/completions
# Maximum symbols per bulk price request (set to 0 to disable)
PRICE_MAX_SYMBOLS_PER_REQUEST=0
PORT=4000

# Frontend configuration
VITE_API_BASE_URL=https://prismai-zify.onrender.com

# Market data provider
ALPHA_VANTAGE_API_KEY=

# Session configuration
SESSION_SECRET=replace-with-long-random-string
SESSION_COOKIE_DOMAIN=
# Optional: PostgreSQL connection for session storage
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB_NAME

# Firebase configuration
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# Alternatively you can provide a path or base64-encoded JSON document instead of individual fields:
# FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccount.json
# FIREBASE_SERVICE_ACCOUNT_BASE64=
# FIREBASE_SERVICE_ACCOUNT_JSON=

# Google OAuth 2.0 configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

# Tier configuration overrides (optional)
PRISM_TIER_FREE_INSIGHTS=20
PRISM_TIER_FREE_QUOTES=200
PRISM_TIER_PLUS_INSIGHTS=200
PRISM_TIER_PLUS_QUOTES=2000
PRISM_TIER_PRO_INSIGHTS=5000
PRISM_TIER_PRO_QUOTES=10000

# Frontend <-> backend CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://mrluca95.github.io,https://www.prismai-portfolio.com,https://prismai-portfolio.com

# OAuth redirect targets
OAUTH_SUCCESS_REDIRECT=https://www.prismai-portfolio.com/
OAUTH_FAILURE_REDIRECT=https://www.prismai-portfolio.com/login?error=oauth

# Optional override for OpenAI price lookup model
OPENAI_PRICE_MODEL=gpt-4o-mini
